<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="appVbox" fx:id="mAppVbox" prefHeight="358.0" prefWidth="417.0" spacing="5.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pomodoroApp.PomodoroController">
   <children>
      <Label id="timerLbl" fx:id="mTimerLbl" alignment="CENTER" contentDisplay="CENTER" prefWidth="623.0" text="00:00:00" textAlignment="CENTER">
         <font>
            <Font name="Arial" size="48.0" />
         </font>
      </Label>
      <Label id="taskLbl" fx:id="mTaskLbl" alignment="TOP_CENTER" contentDisplay="CENTER" prefWidth="624.0" text="Task" textAlignment="CENTER">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </Label>
      <HBox id="timerHbox" fx:id="mtimerHbox" alignment="CENTER" spacing="15.0">
         <children>
            <Button id="startBtn" fx:id="mStartBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#start_OnAction" text="Start" />
            <Button id="pauseBtn" fx:id="mPauseBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#pause_OnAction" text="Pause" />
            <Button id="resetBtn" fx:id="mResetBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#reset_OnAction" text="Reset" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <TableView fx:id="mTaskTblView" editable="true" prefHeight="200.0" prefWidth="587.0">
         <columns>
            <TableColumn fx:id="mTaskCol" minWidth="0.0" prefWidth="329.5" text="Task" />
            <TableColumn fx:id="mTimeCol" minWidth="0.0" prefWidth="86.5" text="Time" />
         </columns></TableView>
      <HBox id="taskHbox" fx:id="mTaskHbox" alignment="TOP_RIGHT" prefWidth="583.0" spacing="5.0">
         <children>
            <Button id="addBtn" fx:id="mAddBtn" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#add_OnAction" text="+" />
            <Button id="delBtn" fx:id="mDelBtn" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#delete_OnAction" text="-" />
         </children>
         <padding>
            <Insets bottom="5.0" right="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
